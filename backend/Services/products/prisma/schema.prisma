generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Decimal

  type        String   @default("indoor")
  imageUrl    String   @default("/plants/plant-placeholder.png") @map("image_url")

  stock       Int      @default(0)

  // ðŸ‘‡ NUEVO: activo mientras haya stock
  isActive    Boolean  @default(true) @map("is_active")

  @@map("products")
}
