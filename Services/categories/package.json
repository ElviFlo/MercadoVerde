{
  "name": "categories-service",
  "version": "1.0.0",
  "description": "Categories microservice for MercadoVerde",
  "main": "dist/main.js",
  "scripts": {
    "dev": "nodemon src/main.ts",
    "dev:local": "nodemon src/main-local.ts",
    "dev:swagger": "nodemon src/main-swagger.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "docker:build": "docker build -t categories-service:latest .",
    "docker:run": "docker run -p 4001:4001 categories-service:latest",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f categories-service"
  },
  "dependencies": {
    "@types/swagger-ui-express": "^4.1.8",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
