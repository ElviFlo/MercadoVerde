generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal  
  categoryId  String?

  // ðŸ‘‡ Nuevo campo: quiÃ©n creÃ³ el producto
  createdBy   String   @default("unknown")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
